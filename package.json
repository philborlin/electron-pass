{
  "name": "electron-pass",
  "version": "0.1.0",
  "private": true,
  "author": "Philip Borlin",
  "description": "Electron client for Pass",
  "homepage": "./",
  "main": "./public/electron.js",
  "dependencies": {
    "antd": "^4.19.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "electron:package:mac": "npm build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "npm build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "npm build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^17.2.0",
    "electron-builder": "^22.14.13",
    "electronmon": "^2.0.2",
    "memfs": "^3.4.1",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.electron.pass",
    "productName": "Electron Pass",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  }
}
